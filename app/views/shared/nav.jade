.navbar.navbar-default(role='navigation')
  .container-fluid
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Amazon

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li: a(href='/profile'): i.fa.fa-user &nbsp #{user.email || user.username}
          li
            form.navbar-form(method='post', action='/logout')
              .form-group
                input(type='hidden', name='_method', value='delete')
                button.btn.btn-danger Logout
        else
          li: a(href='/register'): i.fa.fa-plus-square-o &nbsp Register
          li: a(href='/login'): i.fa.fa-key &nbsp Login
          li: a(href='/auth/twitter'): i.fa.fa-twitter &nbsp Twitter

