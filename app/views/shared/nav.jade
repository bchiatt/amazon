.navbar.navbar-default(role='navigation')
  .container-fluid
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Amazon

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li: a(href='/products'): i.fa.fa-barcode &nbsp Products
          li: a(href='/cart'): i.fa.fa-shopping-cart &nbsp Cart
          li: a(href='/profile'): i.fa.fa-user &nbsp #{user.email || user.username}
          li
            form.navbar-form(method='post', action='/logout')
              .form-group
                input(type='hidden', name='_method', value='delete')
                button.btn.btn-danger Logout
        else
          li: a(href='/register'): i.fa.fa-plus-square-o &nbsp Register
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown') Login
              span.caret
            ul.dropdown-menu(role='menu')
              li: a(href='/login'): i.fa.fa-key &nbsp Local
              li.divider
              li: a(href='/auth/twitter'): i.fa.fa-twitter &nbsp Twitter
              li: a(href='/auth/github'): i.fa.fa-github &nbsp Github
              li: a(href='/auth/google'): i.fa.fa-google &nbsp Google
              li: a(href='/auth/facebook'): i.fa.fa-facebook &nbsp Facebook
              li: a(href='/auth/trello'): i.fa.fa-trello &nbsp Trello

